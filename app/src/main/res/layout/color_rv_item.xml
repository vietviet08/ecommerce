<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageShadow"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="#B8D9FA"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageShadowInside"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/g_blue"
        app:layout_constraintBottom_toBottomOf="@id/imageShadow"
        app:layout_constraintEnd_toEndOf="@id/imageShadow"
        app:layout_constraintStart_toStartOf="@id/imageShadow"
        app:layout_constraintTop_toTopOf="@id/imageShadow" />

    <ImageView
        android:id="@+id/imagePicked"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/ic_picked"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/imageShadowInside"
        app:layout_constraintEnd_toEndOf="@id/imageShadowInside"
        app:layout_constraintStart_toStartOf="@id/imageShadowInside"
        app:layout_constraintTop_toTopOf="@id/imageShadowInside" />

</androidx.constraintlayout.widget.ConstraintLayout>